<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/HeaderFooter.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/SignInSignUp.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Books.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Cart.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Order.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="BookHeader">
        <div style="display: flex; align-items: center;">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16" style="color:white;">
                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
            </svg>
            <div class="BookHeaderContent" runat="server">BookStore</div>
        </div>

        <input id="Search" type="text" style="width: 40%" onchange="Search()" />

        <div style="display: flex;">
            <div style="display: flex; flex-direction: column;">
                <svg xmlns="http://www.w3.org/2000/svg" runat="server" width="25" height="25" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16" style="color:white;">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div style="color: white; font-size: 11px;"><a style="color: white;" id="ToCart">Cart</a></div>
            </div>
            @ViewBag.Count
        </div>
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16" style="color:white;">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
            </svg>
            <div style="color: white; font-size: 11px; position: relative;" onclick="DropdownOpenClose()">Person</div>
            <div id="dropdownmenu" style="display: none; background-color: white; position: absolute; padding: 10px;">
                <div>Hello User</div>
                <div><a style="color: black;" id="ToWishList">WishList</a></div>
                <div><a style="color: black;" id="Logout">Logout</a></div>
            </div>
        </div>
        @if(ViewBag.Token == null) {
        <div style="color: white;"><a href="https://localhost:44380/Users/Login" style="color: white;">Login</a>/<a style="color: white;" href="https://localhost:44380/Users/Register">Register</a></div>
        }
    </div>
    <div class="BookBody">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; Copyright @DateTime.Now.Year, BookStore Private Limited.All Rights Reserved</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/JS/Books.js")
    @RenderSection("scripts", required: false)
</body>
</html>
