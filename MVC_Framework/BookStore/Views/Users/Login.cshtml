@model ModelsLayer.Models.Login

@{
    ViewBag.Title = "Login";
}

<head>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>

<script type="text/javascript">
    var TokenSave = function (data) {
        alert(data.Token);
        sessionStorage.setItem("token", data.Token);
        //window.location.href = '" + Url.Action("AllBooks", "Books") + "';
    };
</script>

<h2>My Account</h2>

@using (Ajax.BeginForm("Login", "Users", null,
              new AjaxOptions { HttpMethod = "post", OnSuccess = "TokenSave", OnFailure = "HandleError" }))
{
    @Html.AntiForgeryToken()

    <div class="BookContent">
        <div style="display: flex;">
            <div class="BookINUP">
                <h4>Existing Customers</h4>
                <p>If you already have an account, please sign in for faster checkout.</p>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="display: flex; flex-direction: column;">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="display: flex; flex-direction: column;">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div style="margin-left: 4%; margin-bottom: 3%;"><a href="https://localhost:44380/Webforms/Users/ForgetReset">Forget Password ?</a></div>

                <div class="form-group">
                    <div style="padding-left:3%">

                            <input type="submit" value="Login" class="btn btn-default" style="background: #9f1f1f; color: white;" />

                    </div>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
